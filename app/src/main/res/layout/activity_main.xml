<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spj.qxbook.MainActivity"
    android:background="#ffffff">
<RelativeLayout
    android:id="@+id/logoLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="90dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">
    <ImageView
        android:id="@+id/logoimage"
        android:layout_gravity="center"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:background="@mipmap/profilepicture"/>
    <TextView
        android:layout_below="@+id/logoimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="登陆"
        android:layout_alignEnd="@+id/logoimage"
        android:layout_alignStart="@+id/logoimage" />

</RelativeLayout>
   <LinearLayout
       android:id="@+id/accountLinearLayout"
       android:layout_below="@+id/logoLinearLayout"
       android:orientation="horizontal"
       android:layout_width="368dp"
       android:layout_height="60dp" >

       <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/user"/>
       <EditText
           android:id="@+id/account"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_gravity="center_vertical"
           android:hint="请输入账号"
           android:textColor="#000000"
           android:textColorHint="#ef5b9c"/>
   </LinearLayout>

    <LinearLayout
        android:id="@+id/passwordLinearLayout"
        android:layout_below="@+id/accountLinearLayout"
        android:orientation="horizontal"
        android:layout_width="368dp"
        android:layout_height="60dp"
        tools:layout_editor_absoluteY="60dp"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/password"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
           android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:hint="请输入密码"
            android:textColor="#000000"
            android:textColorHint="#ef5b9c"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/passwordLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <CheckBox
            android:id="@+id/remember_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="记住密码"
            android:textColor="#ef5b9c"/>
    </LinearLayout>

   <Button
       android:id="@+id/login"
       android:layout_width="90dp"
       android:layout_height="48dp"
       android:layout_marginTop="51dp"
       android:background="@drawable/shapelogin"
       android:text="登陆"
       android:textColor="#000000"
       android:layout_below="@+id/linearLayout2"
       android:layout_alignParentStart="true"
       android:layout_marginStart="78dp"
       />
    <Button
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginEnd="60dp"
        android:id="@+id/sign"
        android:text="注册"
        android:textColor="#000000"
        android:background="@drawable/shapesign"
        android:layout_alignBaseline="@+id/login"
        android:layout_alignBottom="@+id/login"
        android:layout_alignEnd="@+id/passwordLinearLayout" />
</RelativeLayout>
